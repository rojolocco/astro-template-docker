---
import Layout from '../layouts/Layout.astro';
import { Button } from '../components/ui/react/button-test.js';
---

<Layout title="Hello World">
  <main class="mx-auto max-w-prose p-6 text-center">
    <h1 class="text-primary font-heading m-0 text-5xl font-extrabold">
      Hello World
    </h1>
    <p class="mt-2 font-sans text-lg">¡Bienvenido a mi sitio Astro!</p>

    <!-- Ejemplo de uso de colores personalizados -->
    <div class="mt-8 flex flex-col gap-4">
      <div class="bg-primary rounded-lg p-4 text-white">
        <p class="font-sans">Este es un ejemplo usando el color primario</p>
      </div>
      <div class="bg-secondary rounded-lg p-4 text-white">
        <p class="font-sans">Este es un ejemplo usando el color secundario</p>
      </div>
      <div class="bg-accent rounded-lg p-4 text-white">
        <p class="font-sans">Este es un ejemplo usando el color de acento</p>
      </div>
      <Button variant="secondary">Click me</Button>
    </div>

    <!-- Ejemplo de uso de fuentes personalizadas -->
    <div class="bg-background-alt mt-8 rounded-lg p-4 text-left">
      <p class="mb-2 font-sans text-xl">Fuente Sans (Poppins)</p>
      <p class="font-heading mb-2 text-xl">Fuente Heading (Montserrat)</p>
      <p class="font-mono text-xl">Fuente Mono (Fira Code)</p>
    </div>
  </main>
</Layout>

<style>
  /* Puedes añadir estilos específicos de este componente aquí */
  .bg-background-alt {
    background-color: var(--color-background-alt);
  }
</style>
